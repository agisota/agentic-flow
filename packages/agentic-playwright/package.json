{
  "name": "agentic-playwright",
  "version": "1.0.0",
  "description": "AI-powered browser automation with Playwright and MCP",
  "type": "module",
  "bin": {
    "agentic-playwright": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./mcp": "./dist/mcp/server.js"
  },
  "scripts": {
    "build": "tsc -p config/tsconfig.json",
    "dev": "tsx src/index.ts",
    "mcp:start": "node dist/mcp/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "fastmcp": "^1.0.0",
    "zod": "^3.22.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["playwright", "mcp", "browser", "automation", "ai", "claude"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/agentic-flow"
  }
}
